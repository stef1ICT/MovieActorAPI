        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PremiereDate)
        </dd>
    </dl>
</div>
<h1 class="text-center">Actors</h1>


@if (Model.actors.Count > 0)
{
    <table class="table table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.actors.FirstOrDefault().FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.actors.FirstOrDefault().LastName)</th>
            <th>@Html.DisplayNameFor(model => model.actors.FirstOrDefault().NameInMovie)</th>
            <th>@Html.DisplayNameFor(model => model.actors.FirstOrDefault().HomeTown)</th>
            <th>@Html.DisplayNameFor(model => model.actors.FirstOrDefault().DateOfBirth)</th>
            
        </tr>

        @foreach (var item in Model.actors)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.NameInMovie)</td>
                <td>@Html.DisplayFor(modelItem => item.HomeTown)</td>
                <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
            </tr>
        }
    </table>
}
else
{
    <h1 class="text-center">No Actors</h1>
}
<div>
    @Html.ActionLink("Edit", "Edit", new  { id = Model.Id  }) |
    @Html.ActionLink("Add Actor to Movie", "AddActorToMovie", new { id =  Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
